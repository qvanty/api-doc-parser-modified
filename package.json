{
  "name": "@api-platform/api-doc-parser",
  "version": "0.16.8-fork.2",
  "description": "Transform an API documentation (Hydra, OpenAPI, GraphQL) in an intermediate representation that can be used for various tasks such as creating smart API clients, scaffolding code or building administration interfaces.",
  "keywords": [
    "api",
    "api-platform",
    "documentation",
    "hydra",
    "openapi",
    "graphql",
    "jsonld",
    "json-schema",
    "typescript",
    "client"
  ],
  "homepage": "https://github.com/api-platform/api-doc-parser",
  "bugs": "https://github.com/api-platform/api-doc-parser/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/api-platform/api-doc-parser.git"
  },
  "license": "MIT",
  "author": "KÃ©vin Dunglas",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "require": "./lib/index.cjs",
      "import": "./lib/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./lib/index.cjs",
  "types": "./lib/index.d.ts",
  "files": [
    "lib",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --dts --format cjs,esm --out-dir lib --clean",
    "format": "prettier . --write --experimental-cli",
    "format:check": "prettier . --check --experimental-cli",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "prepare": "npm run build",
    "test": "vitest run",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "graphql": "^16.11.0",
    "inflection": "^3.0.2",
    "jsonld": "^8.3.3",
    "jsonref": "^9.0.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/jsonld": "^1.5.15",
    "@types/node": "^22.16.5",
    "@vitest/coverage-v8": "3.2.4",
    "knip": "^5.62.0",
    "msw": "^2.10.4",
    "openapi-types": "^12.1.3",
    "oxlint": "^1.8.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "shx": "^0.4.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "packageManager": "npm@>=10",
  "engines": {
    "node": ">= 20"
  },
  "publishConfig": {
    "access": "public"
  }
}
